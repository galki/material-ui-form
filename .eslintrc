extends:
  - airbnb
  - plugin:import/errors
  - plugin:import/warnings

parser: babel-eslint

parserOptions:
  ecmaVersion: 6
  ecmaFeatures:
  jsx: true
  sourceType: "module"

plugins:
  - react
  - jsx-a11y
  - import
  - filenames

globals:
  firebase: true
  requirejs: true
  window: true
  _: true
  expect: true
  jest: true
  shallow: true
  render: true
  mount: true

env:
  amd: true # for require.js (request() and define())
  browser: true
  commonjs: true
  es6: true
  node: true

rules:
  # CHANGE
  comma-dangle: ["error", "always-multiline"]
  constructor-super: 1
  filenames/match-exported: 2
  import/default: 2
  import/export: 2
  import/named: 2
  import/namespace: 2
  import/no-unresolved: 1
  import/prefer-default-export: 0
  import/unambiguous: 0
  max-len: [1, { "code": 85, "ignoreComments": true, "tabWidth": 2, "ignoreRegExpLiterals": true }]
  no-await-in-loop: 1
  no-const-assign: 1
  no-continue: 1
  no-multi-str: 0
  no-plusplus: [0, { "allowForLoopAfterthoughts": true }]
  no-restricted-syntax: ["error", "BinaryExpression[operator='of']"]
  no-this-before-super: 1
  no-undef: 1
  no-unreachable: 1
  no-unused-expressions: 1
  no-unused-vars: ["warn", {argsIgnorePattern: "^_" }]
  react/forbid-prop-types: ["error", {forbid: ['any']}]
  react/jsx-indent-props: ["error", 2]
  react/jsx-indent: ["error", 2]
  react/jsx-wrap-multilines: 1
  react/prefer-stateless-function: 1

  # DISALBE
  class-methods-use-this: 0
  eol-last: 0
  import/extensions: 0
  indent: 0
  jsx-a11y/anchor-is-valid: 0
  no-param-reassign: 0
  no-underscore-dangle: 0
  prefer-template: 0
  react/jsx-filename-extension: 0  # unsupported by react-native
  react/jsx-no-bind: 0
  react/no-multi-comp: 0
  react/require-extension: 0  # deprecated. use eslint-plugin-import instead
  semi: 0
  space-in-parens: 0
